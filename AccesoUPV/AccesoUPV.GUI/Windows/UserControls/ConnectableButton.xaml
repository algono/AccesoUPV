<UserControl 
        x:Name="MyConnectableButton"
        x:Class="AccesoUPV.GUI.Windows.UserControls.ConnectableButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:AccesoUPV.GUI.Windows.UserControls"
        mc:Ignorable="d"
        d:DesignHeight="{Binding ElementName=MyConnectableButton, Path=Height}" d:DesignWidth="{Binding ElementName=MyConnectableButton, Path=Width}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Button x:Name="ConnectButton" Grid.Row="0" Click="ConnectButton_Click" Content="{Binding ElementName=MyConnectableButton, Path=ConnectText}" FontSize="{Binding ElementName=MyConnectableButton, Path=ConnectFontSize}"/>
        <Button x:Name="DisconnectButton" Grid.Row="1" Content="{Binding ElementName=MyConnectableButton, Path=DisconnectText}" Background="#FFAC1010" Foreground="#FFFFDEDE" BorderBrush="{x:Null}" Click="DisconnectButton_Click" Visibility="Hidden" FontSize="{Binding ElementName=MyConnectableButton, Path=DisconnectFontSize}">
            
        </Button>
    </Grid>
</UserControl>
